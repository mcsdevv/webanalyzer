{
  "version": 2,
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/assets/(.*)", "dest": "/dist/assets/$1" },
    { "src": "/(.*)", "dest": "/dist/$1" }
  ],
  "rewrites": [
    {
      "source": "/api/analyzeWebsite.ts",
      "destination": "/api/analyzeWebsite"
    }
  ],
  "functions": {
    "api/analyzeWebsite.ts": {
      "runtime": "@vercel/node@3.2.10"
    }
  }
}

